<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="idCreateDialog"
        type="Message"
        title="New City"
        beforeClose="onBeforeClose"
    >
        <content>
            <VBox class="sapUiSmallMarginBottom">
                <Label
                    text="City"
                    labelFor="idNameInput"
                />
                <Input
                    id="idNameInput"
                    required="true"
                    change="onInputChange"
                />
            </VBox>
            <VBox class="sapUiSmallMarginBottom">
                <Label
                    text="Area"
                    labelFor="idAreaInput"
                />
                <Input
                    id="idAreaInput"
                    required="true"
                    type="Number"
                    change="onInputChange"
                />
            </VBox>
            <VBox>
                <Label
                    text="Population"
                    labelFor="idPopInput"
                />
                <Input
                    id="idPopInput"
                    required="true"
                    type="Number"
                    change="onInputChange"
                />
            </VBox>
        </content>
        <beginButton>
            <Button
                text="Create"
                type="Emphasized"
                press="onCreate"
                enabled="false"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="onCancel"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
